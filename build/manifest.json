{
  "manifest_version": 2,

  "name": "React Chrome Extension",
  "description": "React Chrome Extension",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "css": [ "content.css" ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
