{
  "manifest_version": 2,

  "name": "React Chrome Extension",
  "description": "React Chrome Extension",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": ["tabs", "http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "css": [ "content.css" ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
